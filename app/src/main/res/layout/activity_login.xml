<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#e3e2e2"
    android:orientation="vertical"
    tools:context="com.example.pc.bettertradeapp.LoginActivity">
    <ImageView
        android:src="@drawable/banner_01"
        android:layout_gravity="center_horizontal"
        android:id="@+id/img_logo_login"
        android:layout_width="100sp"
        android:layout_height="100sp" />
    <LinearLayout
        android:layout_marginTop="10sp"
        android:layout_marginLeft="5sp"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50sp">
        <TextView
            android:gravity="center"
            android:text="账号："
            android:textColor="#181717"
            android:layout_weight="2"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="50sp" />
        <EditText
            android:layout_weight="0.7"
            android:hint="手机号/用户名/邮箱"
            android:id="@+id/edit_userinfo_login"
            android:layout_width="match_parent"
            android:layout_height="50sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10sp"
        android:layout_marginLeft="5sp"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50sp">
        <TextView
            android:textColor="#181717"
            android:gravity="center"
            android:layout_weight="2"
            android:text="登录密码："
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="50sp" />

        <EditText
            android:layout_weight="0.7"
            android:hint="请输入密码"
            android:id="@+id/edit_userpassword_login"
            android:layout_width="match_parent"
            android:layout_height="50sp" />
    </LinearLayout>

    <Button
        android:layout_marginTop="15sp"
        android:id="@+id/bt_login_login"
        android:text="登录"
        android:textSize="20sp"
        android:background="#0ae990"
        android:textColor="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="40sp" />

    <TextView
        android:layout_marginTop="5sp"
        android:text="忘记密码"
        android:textSize="18sp"
        android:layout_gravity="right"
        android:id="@+id/forgotton_login"
        android:layout_width="wrap_content"
        android:layout_height="25sp" />
    <Button
        android:layout_gravity="center"
        android:id="@+id/bt_register_login"
        android:text="立即注册"
        android:textColor="#0aeb19"
        android:background="#ffffff"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="20sp" />
    <TextView
        android:layout_marginTop="50sp"
        android:gravity="center"
        android:text="----------使用以下方式直接登录---------"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/img_bt_weibo"
            android:src="@drawable/banner_02"
            android:layout_weight="0.3"
            android:layout_margin="10sp"
            android:layout_width="80sp"
            android:layout_height="80sp" />

        <ImageButton
            android:id="@+id/img_bt_qq"
            android:src="@drawable/banner_02"
            android:layout_weight="0.3"
            android:layout_margin="10sp"
            android:layout_width="80sp"
            android:layout_height="80sp" />

        <ImageButton
            android:id="@+id/img_bt_wechat"
            android:src="@drawable/banner_02"
            android:layout_weight="0.3"
            android:layout_margin="10sp"
            android:layout_width="80sp"
            android:layout_height="80sp" />
    </LinearLayout>
</LinearLayout>
